<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/VisitWebsiteTextview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Business_With_Us">


    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="240dp"
        android:layout_height="126dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/buttonHomeBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:background="#F80303"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.284" />

    <Button
        android:id="@+id/buttonAddShip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F80303"
        android:text="Add Shipment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.284" />

    <TextView
        android:id="@+id/textViewVsitWeb"
        android:layout_width="134dp"
        android:layout_height="24dp"
        android:layout_marginTop="100dp"
        android:text="Visit Website"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="402dp"
        android:layout_height="167dp"
        android:layout_marginTop="28dp"
        android:text="Transnet plays a crucial role in bolstering the South African economy by implementing policies that support Enterprise and Supplier Development (ESD). The historic lack of infrastructure investment has adversely affected local industries, leading to a reduction in scale and manufacturing capabilities. To address this, Transnet has formed strategic partnerships with the National Association of Automotive Component and Allied Manufactures (NAACAM) and the National Empowerment Fund (NEF) to promote local manufacturing capacity in its core business."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVsitWeb" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="399dp"
        android:layout_height="151dp"
        android:layout_marginTop="8dp"
        android:text="Transnet's Enterprise and Supplier Development (ESD) services focus on unlocking the value of local Small, Medium, and Micro Enterprises (SMMEs) by building their capabilities through technical and business training aligned with procurement needs. The initiative collaborates with strategic partners and industry associations to provide additional resources and support. Transnet facilitates access to funding, offers post-funding support, and provides supplier development support for SMMEs to access supply chain opportunities."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/buttonContactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="#F80303"
        android:text="Contact Us"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>